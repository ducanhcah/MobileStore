@model List<MobileStore.Models.CartItem>

@{
    ViewData["Title"] = "Giỏ hàng";
}

<div class="container mt-5">
    <h2 class="mb-4 fw-bold">Giỏ hàng của bạn</h2>

    @if (Model.Count == 0)
    {
        <div class="text-center py-5">
            <i class="bi bi-cart-x fs-1 text-muted"></i>
            <p class="mt-3 fs-5 text-muted">Giỏ hàng trống</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary rounded-pill mt-3">Tiếp tục mua sắm</a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm rounded-4">
                    <div class="card-body p-0">
                        <table class="table table-hover mb-0 align-middle">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4 py-3 border-0">Sản phẩm</th>
                                    <th class="py-3 border-0">Giá</th>
                                    <th class="py-3 border-0">Số lượng</th>
                                    <th class="py-3 border-0">Thành tiền</th>
                                    <th class="py-3 border-0"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="d-flex align-items-center">
                                                <img src="@item.ImageUrl" alt="@item.ProductName" class="rounded me-3" style="width: 60px; height: 60px; object-fit: contain;">
                                                <div>
                                                    <h6 class="mb-0 fw-bold">@item.ProductName</h6>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="fw-bold">@item.Price.ToString("N0") đ</td>
                                        <td>
                                            <div class="input-group input-group-sm" style="width: 100px;">
                                                 <input type="number" class="form-control text-center" value="@item.Quantity" readonly>
                                            </div>
                                        </td>
                                        <td class="fw-bold text-primary">@item.Total.ToString("N0") đ</td>
                                        <td class="text-end pe-4">
                                            <a asp-controller="Cart" asp-action="RemoveFromCart" asp-route-productId="@item.ProductId" class="btn btn-sm btn-outline-danger rounded-circle"><i class="bi bi-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 mt-4 mt-lg-0">
                <div class="card border-0 shadow-sm rounded-4 bg-light">
                    <div class="card-body p-4">
                        <h4 class="fw-bold mb-4">Tổng giỏ hàng</h4>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Tạm tính</span>
                            <span class="fw-bold">@Model.Sum(x => x.Total).ToString("N0") đ</span>
                        </div>
                        <div class="d-flex justify-content-between mb-4">
                            <span class="text-muted">Giảm giá</span>
                            <span class="text-success fw-bold">-0 đ</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-4">
                            <span class="fs-5 fw-bold">Tổng cộng</span>
                            <span class="fs-4 fw-bold text-primary">@Model.Sum(x => x.Total).ToString("N0") đ</span>
                        </div>
                        <button class="btn btn-primary w-100 btn-lg rounded-pill shadow-sm">Thanh toán</button>
                         <a asp-controller="Home" asp-action="Index" class="btn btn-link w-100 mt-2 text-decoration-none">Tiếp tục mua sắm</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
