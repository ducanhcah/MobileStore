@{
    ViewData["Title"] = "Đăng Nhập";
}

<div class="d-flex align-items-center justify-content-center min-vh-100 bg-light-subtle" style="background: url('https://images.unsplash.com/photo-1616348436168-de43ad0db179?q=80&w=2881&auto=format&fit=crop') no-repeat center center; background-size: cover;">
    <div class="card border-0 shadow-lg p-4 glassmorphism" style="width: 100%; max-width: 400px; backdrop-filter: blur(10px); background: rgba(255, 255, 255, 0.8);">
        <div class="card-body">
            <h3 class="text-center fw-bold mb-4 text-dark">Chào mừng trở lại</h3>
            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
                
                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                <div class="mb-3">
                    <label class="form-label fw-semibold text-muted">Email</label>
                    <input type="email" name="email" class="form-control rounded-pill px-3 py-2 bg-white border-0 shadow-sm" placeholder="name@example.com" required>
                </div>
                <div class="mb-4">
                    <label class="form-label fw-semibold text-muted">Mật khẩu</label>
                    <input type="password" name="password" class="form-control rounded-pill px-3 py-2 bg-white border-0 shadow-sm" placeholder="••••••••" required>
                </div>
                
                <button type="submit" class="btn btn-dark w-100 rounded-pill py-2 fw-bold shadow-sm hover-scale">Đăng Nhập</button>
            </form>
            
            <div class="mt-4 text-center">
                <span class="text-muted small">Chưa có tài khoản? </span>
                <a asp-action="Register" class="text-primary fw-bold text-decoration-none">Đăng ký ngay</a>
            </div>
        </div>
    </div>
</div>
