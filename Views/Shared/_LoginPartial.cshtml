@using Microsoft.AspNetCore.Identity
@using MobileStore.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav align-items-center mb-2 mb-lg-0">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle text-dark fw-semibold" href="#" role="button" data-bs-toggle="dropdown">
           <img src="https://ui-avatars.com/api/?name=@User.Identity?.Name&background=0D8ABC&color=fff" class="rounded-circle me-1" width="30" height="30">
           @User.Identity?.Name
        </a>
        <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0 rounded-4">
            <li><a class="dropdown-item" href="#">Hồ sơ cá nhân</a></li>
            <li><a class="dropdown-item" href="#">Đơn hàng của tôi</a></li>
            <li><hr class="dropdown-divider"></li>
            <li>
                <form class="w-100" asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit" class="dropdown-item text-danger">Đăng xuất</button>
                </form>
            </li>
        </ul>
    </li>
}
else
{
    <li class="nav-item">
        <a class="btn btn-outline-dark rounded-pill px-4 me-2 btn-sm" asp-controller="Account" asp-action="Login">Đăng nhập</a>
    </li>
    <li class="nav-item">
        <a class="btn btn-primary rounded-pill px-4 btn-sm text-white shadow-sm" asp-controller="Account" asp-action="Register">Đăng ký</a>
    </li>
}
</ul>
